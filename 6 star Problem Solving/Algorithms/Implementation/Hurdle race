#include <bits/stdc++.h>

using namespace std;

vector<string> split_string(string);
int hurdleRace(int k, vector<int> v) {
    int x=*max_element(v.begin(),v.end());
    if(k>=x)
      return(0);
    else 
       return(x-k);    
    return(0);
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n,k;
    cin>>n>>k;
    vector<int> height(n);
    for (int i = 0; i < n; i++) 
        cin>>height[i];
    int result = hurdleRace(k, height);
    cout << result << "\n";
    return 0;
}
